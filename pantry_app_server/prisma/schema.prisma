generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  email    String @unique
  password String
  cards    Card[]
  items    Item[]
  recipes Recipe[]
  carts    Cart[]
}

model Item {
  id       Int    @id @default(autoincrement())
  title    String
  quantity Int
  type     String
  cardId   Int
  card     Card @relation(fields: [cardId], references: [id])
  userId   Int
  user     User @relation(fields: [userId], references: [id])
  recipeId Int?
  recipe   Recipe? @relation(fields: [recipeId], references: [id])
  cartId   Int?
  cart     Cart? @relation(fields: [cartId], references: [id])
  inCart   Boolean @default(false)
}

model Card {
  id Int @id @default(autoincrement())
  name String
  userId Int
  user User @relation(fields: [userId], references: [id])
  items Item[]
}

model Cart {
  id Int @id @default(autoincrement())
  name String
  userId Int
  user User @relation(fields: [userId], references: [id])
  items Item[]
}

model Recipe {
  id Int @id @default(autoincrement())
  title String
  items Item[]
  instructions String
  userId Int
  user User @relation(fields: [userId], references: [id])
}